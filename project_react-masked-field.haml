		#react-masked-field							
			%article.jumbotron
				.container
					.row.project-name.text-center
						%h1 React-Masked-Field
						%p A masked input component built in React.js
		%article.container
			.row
				.col-sm-10.col-sm-offset-1
					.project-description
						%h3 About React-Masked-Field
						%p The MaskedField component is a text input field that allows you to restrict and format the values that can be entered into it, while informing the user of the expected input. Common uses include dates, phone numbers, social security numbers and tax IDs.
					.project-box
						%ul.nav.project-nav
							%li#demo.tab
								%a Demo
							%li#installation.tab 
								%a Installation
							%li#example.tab 
								%a Example 
							%li#props.tab 
								%a Props
						#project-demo.project-detail
							%h4 Demo
							%p The example below will only allow a numeric entry for dates.
							%form
								.form-group
									%label Date
									.react-masked-field-demo
						#project-installation.project-detail.hidden
							%h4 Installation
							%p A standalone build is also available in the dist folder.
							%code
								npm install react-masked-field
						#project-example.project-detail.hidden
							%h4 Example
							%p 
								%code
									%span.variable 
										var 
									MaskedField = 
									%span.method
										require
									('react-masked-field');
							%p 
								%code									
									%span.variable
										function 
									handleComplete(date) {
									%br/
									%span.method
										&nbsp; console.log
									('Date is ' + date);
									%br/
									}	
							%p 
								%code
									React.render(
									%br/
									&nbsp; &lt;MaskedField mask="99/99/9999" onComplete={handleComplete} /&gt;,
									%br/
									%span.method
										&nbsp; document.getElementById
									('demo')
									%br/
									);							

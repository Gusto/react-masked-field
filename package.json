{
  "name": "react-masked-input",
  "description": "A masked input component built in React",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZenPayroll/react-masked-input.git"
  },
  "main": "src/MaskedInput.js",
  "peerDependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "browserify": "^10.2.1",
    "chai": "^2.3.0",
    "envify": "^3.4.0",
    "eslint": "^0.21.2",
    "eslint-plugin-react": "^2.3.0",
    "karma": "^0.12.33",
    "karma-browserify": "^4.2.1",
    "karma-chrome-launcher": "^0.1.12",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.1.10",
    "mocha": "^2.2.5",
    "react": "^0.13.3",
    "reactify": "^1.1.1",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0",
    "uglify-js": "^2.4.23"
  },
  "scripts": {
    "start": "./node_modules/karma/bin/karma start karma.dev.coffee",
    "build": "NODE_ENV=production browserify --external react --standalone MaskedInput -o dist/MaskedInput.js . && ./node_modules/uglify-js/bin/uglifyjs dist/MaskedInput.js -cm -o dist/MaskedInput.min.js",
    "test": "./node_modules/karma/bin/karma start karma.ci.coffee",
    "lint": "./node_modules/eslint/bin/eslint.js ."
  },
  "browserify": {
    "transform": [
      ["reactify", {"es6": true}],
      "envify"
    ]
  }
